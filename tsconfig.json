{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "#core/*": ["src/modules/Core/*"],
      "#landing/*": ["src/modules/Landing/*"],
      "#poke/*": ["src/modules/Poke/*"],
      "#weather/*": ["src/modules/Weather/*"],
      "#pixel-canvas/*": ["src/modules/PixelCanvas/*"],
      "#store/*": ["src/store/*"]
    }
  }
}
